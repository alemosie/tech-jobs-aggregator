var savedJob = "#saved-job-" + "<%= @job.id %>";
var savedJobButton = "#saved-job-button-" + "<%= @job.id %>";

$(savedJob).fadeOut();

setTimeout(function(){
  $(savedJob).remove();
}, 1000);

if ( $("#dice-feed").has(savedJobButton).length )
{
  $(savedJobButton)
    .removeAttr("id")
    .removeClass("btn-success")
    .addClass("btn-primary")
    .text("+")
    .prop("disabled", false);
}
