<%= form_tag login_path, id: "log-in" do %>
  <fieldset class="form-group">
    <%= text_field_tag :username, "", class: "form-control", placeholder:"Enter username", required: true %>
    <%= password_field_tag :password, "", class: "form-control", placeholder:"Enter password", required: true %>
    <%= submit_tag "Log In" %>
  </fieldset>
<% end %>
