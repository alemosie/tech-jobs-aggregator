<h1>Hiya, <%= @user.name.capitalize %>!</h1>
<br>
<h2 class="favorites">Saved jobs</h2>

<div id="saved-jobs-list">
  <% if jobs.any? %>

    <% jobs.each do |j| %>
      <%= render partial: "jobs/saved_job", locals: {job: j} %>
    <% end %>

  <% else %>

    <div class="col-sm-12" id="no-saved-jobs">
        <p class="meta">No jobs yet; save jobs to access them later.</p>
    </div>

  <% end %>
</div>
